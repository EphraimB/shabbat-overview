{
    "compilerOptions": {
        "strictNullChecks": true,
        "types": [
            "node"
        ],
        "module": "ES2022",
        "esModuleInterop": true,
        "target": "ES2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "exclude": [
        "__tests__/**/*"
    ]
}